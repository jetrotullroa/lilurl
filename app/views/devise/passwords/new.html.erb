<div class="content">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-devise" }) do |f| %>
    <%= f.error_notification %>

    <h2 class="text-center">Forgot your password?</h2>

      <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>

      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-block btn-primary" %>

      <%= render "devise/shared/links" %>
  <% end %>
</div>
