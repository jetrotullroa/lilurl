<div class="content">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-devise" }) do |f| %>
    <%= f.error_notification %>

      <h2 class="text-center">Change your password</h2>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>

      <%= f.button :submit, "Change my password", class: "btn btn-block btn-primary" %>
      <%= render "devise/shared/links" %>
  <% end %>
</div>
