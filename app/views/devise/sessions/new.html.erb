<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-devise" }) do |f| %>

    <h2 class="text-center">Log in</h2>

    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: false, label: false, placeholder: "Password" %>

    <%= f.button :submit, "Login", class: "btn btn-block btn-primary" %>
    <%= render "devise/shared/links" %>
<% end %>
